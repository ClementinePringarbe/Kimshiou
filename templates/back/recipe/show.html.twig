{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{{ recipe.ingredients }}</td>
            </tr>
            <tr>
                <th>Steps</th>
                <td>{{ recipe.steps }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ recipe.duration }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ recipe.source }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ recipe.updatedAt ? recipe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_recipe_index') }}">back to list</a>

    <a href="{{ path('app_back_recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('back/recipe/_delete_form.html.twig') }}
{% endblock %}
